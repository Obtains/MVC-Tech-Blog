<article>
    <h2>Edit Post</h2>
    <form class="edit-post-form">
        <div>
            <input name="post-title" type="text" value="{{post.title}}"/>
        </div>
        <div>
            Posted on {{format_date post.created_at}}
            <br><br>
            {{post.comments.length}} {{format_plural 'comment' post.comments.length}}
        </div>

            <button type="submit">Save Post</button>
            <button type="button" class="delete-post-btn">Delete Post</button>
    </form>
</article>

<script src="/public/javascript/edit-post.js"></script>
<script src="/public/javascript/delete-post.js"></script>